{
  "version": 2,
  "buildCommand": false,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/build/**",
      "use": "@vercel/static"
    },
    {
      "src": "Admin/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/index.js"
    },
    {
      "src": "/admin",
      "dest": "Admin/build/index.html"
    },
    {
      "src": "/admin/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json))",
      "dest": "Admin/build/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "Admin/build/index.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json))",
      "dest": "Frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/build/index.html"
    }
  ]
}
